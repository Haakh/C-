#include <iostream>
#include<strings.h>
#include<math.h>
using namespace std;

int main() {
	
    int n=1,ans=0;
    while(n!=0){//input the number until 0 is entered
        cin>>n;
        for(int i=1;i<=n;i++)
            ans+= pow((n-i)+1,2); //recursive addition starting from 1 square upto n squares.
        cout<<ans<<endl;
    }

	return 0;
}
